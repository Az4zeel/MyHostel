<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_warden"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StudentDetails">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the department"
        android:id="@+id/depttextview"
        android:textSize="25sp"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/depttextview"
        android:id="@+id/spinner3">
    </Spinner>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the year"
        android:id="@+id/yeartextview"
        android:layout_below="@+id/spinner3"
        android:textSize="25sp"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yeartextview"
        android:id="@+id/spinner4">
    </Spinner>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the room number"
        android:id="@+id/roomtextview"
        android:layout_below="@+id/spinner4"
        android:textSize="25sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/roomtextview"
        android:id="@+id/ed5"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the roll number"
        android:id="@+id/rollnotextview"
        android:layout_below="@+id/ed5"
        android:textSize="25sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rollnotextview"
        android:id="@+id/ed6"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Details"
        android:id="@+id/viewdetails"
        android:background="@drawable/shape2"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="35dp"/>


    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Add Details"
        android:background="@drawable/shape2"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:id="@+id/adddetails"
        android:layout_below="@+id/viewdetails"
        android:layout_alignParentStart="true" />
</RelativeLayout>